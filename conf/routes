# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

POST 	/users					controllers.UserController.create
GET		/users/:id				controllers.UserController.findOne(id: String)
POST		/users/find			controllers.UserController.find(limit: Int ?= 0, skip: Int ?=0)
PUT		/users/:id				controllers.UserController.update(id: String)
GET		/users/specific/:id				controllers.UserController.specific(id: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
